---
import { languages } from '../i18n/ui';
import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
---
<ul>
  {Object.entries(languages).map(([code, label]) => (
    <li>
      <a href={code === 'lt' ? '/' : `/${code}/`} aria-current={lang === code ? 'page' : undefined}>
        {label}
      </a>
    </li>
  ))}
</ul> 