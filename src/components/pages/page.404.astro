---
import { useTranslations, getLocalePath } from '../../lib/utils';

const lang = Astro.props.locale;
const t = useTranslations(lang);
---
<main class="container">
    <div class="error-page relative flex min-h-screen flex-col items-center gap-36 bg-cover bg-center bg-no-repeat px-5 pb-36 pt-9 text-white md:gap-36 md:px-36 md:pb-36 md:pt-9">
        <div class="error-page-overlay"></div>
        <!-- 404 Content -->
        <div class="error-content relative z-10 mx-auto flex w-full flex-1 flex-col items-center justify-center gap-10 text-center">
            <div class="error-number m-0 font-playfair text-[5rem] font-bold leading-none text-white/80 md:text-[7.5rem]">404</div>
            <h1 class="error-title m-0 font-playfair text-[2rem] font-normal leading-tight md:text-5xl">{t('page.404.title')}</h1>
            <p class="error-description m-0 max-w-[31.25rem] font-source text-lg font-normal leading-normal opacity-90 md:text-lg">
                {t('page.404.description')}
            </p>
            <div class="error-actions mt-5 flex gap-5 md:flex-row max-md:flex-col max-md:gap-4">
                <a href={getLocalePath(lang, '/')} class="error-button primary min-w-[8.75rem] border-2 border-white bg-white px-10 py-4 text-center font-playfair text-base font-semibold uppercase leading-snug text-[#333F48] no-underline transition-all duration-300 ease-in-out hover:-translate-y-0.5 hover:bg-[#D6D2C4] md:min-w-[8.75rem] max-md:w-full max-md:max-w-[15.625rem]">
                    {t('page.404.button.home')}
                </a>
            </div>
        </div>
    </div>
</main>
<style>
  .error-page {
    background-image: linear-gradient(rgba(50, 62, 72, 0.6), rgba(50, 62, 72, 0.6)),
                      url('/images/hero-background.jpg');
  }
</style>