---
import { useTranslations, getLangFromUrl } from '../../lib/utils';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-video" class="about-video-section">
  <!-- Decorative spacer with SVG elements -->
  <div class="spacer">
    <img src="/images/decorative-spacer.svg" alt="Decorative spacer" width="194" height="246" />
  </div>

  <!-- Main content container -->
  <div class="about-content">
    <!-- About us information -->
    <div class="about-info">
      <h2 class="about-title" set:html={t('section.about.title')}></h2>
      <div class="about-text">
        <p set:html={t('section.about.mission')}></p>
        <p set:html={t('section.about.philosophy')}></p>
        <p set:html={t('section.about.promise')}></p>
      </div>
      <a href="/about" class="button-primary-dark hidden">{t('section.about.button')}</a>
    </div>

    <!-- YouTube Video Embed -->
    <div class="video-container">
      <iframe 
        src="https://www.youtube.com/embed/Jm---h1OWgs" 
        title="About Us Video" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
        allowfullscreen
        class="youtube-video">
      </iframe>
    </div>
  </div>
</section>

<style>
  .about-video-section {
    background: var(--color-light);
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .spacer {
    position: absolute;
    top: 0;
    width: 12rem;
    z-index: 1;
  }

  .spacer img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .about-content {
    display: flex;
    gap: 6rem;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }

  .about-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 4rem 0 0 8rem;
    flex: 1;
    max-width: 34rem;
    min-width: 34rem;
  }

  .about-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: 6rem;
    line-height: 1;
    color: #323E48;
    margin: 0;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-text p {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.257;
    color: #323E48;
    margin: 0;
  }

  .hidden {
    display: none;
  }

  /* Video container */
  .video-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 0;
    aspect-ratio: 16/9;
    width: 100%;
    max-width: 640px;
    background: #000;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    margin: 0 auto;
  }

  .youtube-video {
    width: 100%;
    height: 100%;
    border: 0;
    border-radius: 10px;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .about-content {
      flex-direction: column;
      gap: 3rem;
    }

    .about-info {
      max-width: 100%;
      padding: 0 8rem 0 8rem;
    }

    .youtube-video {
      height: 350px;
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .about-video-section {
      padding: 2rem 0;
    }

    .spacer {
      display: none;
    }

    .about-content {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
      padding: 0 0rem;
    }

    .about-info {
      max-width: 100%;
      min-width: 100%;
      padding: 0 2rem 0 2rem;
    }

    .about-title {
      font-size: 2.5rem;
    }

    .about-text p {
      font-size: 1rem;
    }

    .youtube-video {
      height: 250px;
    }
  }
</style>