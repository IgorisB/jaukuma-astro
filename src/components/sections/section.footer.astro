---
import { useTranslations, getLangFromUrl, getLocalePath } from '../../lib/utils';
import { SOCIAL_MEDIA, CONTACT } from '../../lib/constants';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="footer container">
  <div class="footer-menu">
    <div class="hidden-lg">
      <a href={getLocalePath(lang, '/')} class="footer-logo-link">
        <img src="/images/jaukuma-logo-rect.svg" alt="Jaukuma" width="261" />
      </a>
    </div>
    
    <div class="footer-services-submenu">
      <h3 class="submenu-title">{t('section.footer.services.title')}</h3>
      <ul class="submenu-list">
        <li><span>{t('section.footer.services.bouquets')}</span></li>
        <li><span>{t('section.footer.services.decoration')}</span></li>
        <li><span>{t('section.footer.services.plants')}</span></li>
        <li><span>{t('section.footer.services.events')}</span></li>
        <li><span>{t('section.footer.services.subscription')}</span></li>
      </ul>
    </div>
    
    <div class="footer-info-submenu">
      <div class="contacts">
        <h3 class="submenu-title">{t('section.footer.contact.title')}</h3>
                 <ul class="submenu-list">
           <li><a href={`tel:${CONTACT.PHONE}`}>{t('section.footer.contact.phone')}</a></li>
           <li><a href="https://maps.app.goo.gl/zSE68o8uiVocDfRA7" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address1')}</a></li>
           <li><a href="https://maps.app.goo.gl/uRcTPd2rH8BM4sMR6" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address2')}</a></li>
           <li><a href="https://maps.app.goo.gl/fVB1y5DGnxBmvDbH9" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address3')}</a></li>
         </ul>
      </div>
   <!-- temporary disabled
      <div class="company-info">
        <h3 class="submenu-title">{t('section.footer.company.title')}</h3>
        <ul class="submenu-list">
          <li><a href={getLocalePath(lang, '/#about')}>{t('section.footer.company.about')}</a></li>
          <li><a href="/privacy">{t('section.footer.company.privacy')}</a></li>
        </ul>
      </div>
    </div> -->   
  </div>

  
  <!-- Copyright and Social Icons (Always Visible) -->
  <div class="copyright">
    <div class="social-icons">
      <a href={SOCIAL_MEDIA.INSTAGRAM} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <img src="/images/instagram-icon.svg" alt="Instagram" width="32" height="32" />
      </a>
      <a href={SOCIAL_MEDIA.FACEBOOK} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
        <img src="/images/facebook-icon.svg" alt="Facebook" width="32" height="32" />
      </a>
    </div>
    
    <div class="footer-info">
      <p class="copyright-text">{t('section.footer.copyright')}</p>
    </div>
  </div>
</footer>

<style>
  /* Common Footer Styles */
  .footer {
    @apply flex flex-col items-center justify-center gap-2 bg-primary-light text-light w-full;
    @apply p-8 px-6 md:p-10 md:px-12 lg:p-10 lg:px-36;
  }

  /* Footer Menu Styles */
  .footer-menu {
    @apply flex justify-between items-start w-full pb-4 flex-wrap;
    @apply flex-col items-center gap-8 md:flex-col md:items-center md:gap-8;
  }

  /* Footer Logo Link */
  .footer-logo-link {
    @apply inline-block transition-opacity duration-300 no-underline hover:opacity-90;
  }

  /* Services Submenu */
  .footer-services-submenu {
    @apply flex flex-col gap-2.5 px-4 pb-4;
    @apply hidden md:flex md:items-center md:text-center md:px-0;
  }

  /* Info Submenu */
  .footer-info-submenu {
    @apply flex gap-4 items-center text-center md:items-center md:text-center;
  }

  .contacts,
  .company-info {
    @apply flex flex-col gap-2.5 px-4 md:px-0;
  }

  /* Typography */
  .submenu-title {
    @apply font-serif font-normal m-0 text-light;
    @apply text-lg md:text-xl lg:text-lg;
    line-height: 1.33;
  }

  .copyright {
    @apply pt-4 flex flex-col justify-center items-center w-full gap-2.5;
  }

  .submenu-list {
    @apply list-none p-0 m-0 flex flex-col gap-2.5;
  }

  .submenu-list li {
    @apply font-sans font-normal text-light;
    @apply text-sm md:text-base lg:text-sm;
    line-height: 1.26;
  }

  .submenu-list a {
    @apply text-light no-underline transition-opacity duration-300 hover:opacity-80;
  }

  .submenu-list span {
    @apply text-light font-sans font-normal;
    line-height: 1.26;
  }

  /* Copyright and Social Icons */
  .social-icons {
    @apply flex justify-center items-center w-full gap-4;
  }

  .social-icons a {
    @apply flex items-center justify-center transition-opacity duration-300 hover:opacity-80;
  }

  .footer-info {
    @apply flex justify-center items-center w-full gap-2;
  }

  .copyright-text {
    @apply font-sans font-normal text-center m-0 text-light;
    @apply text-sm md:text-base lg:text-sm;
    line-height: 1.26;
    letter-spacing: 0.01em;
  }

  @media (min-width: 1536px) {
    .footer {
      @apply rounded-b-lg overflow-hidden;
    }
  }
</style>