---
import { useTranslations, getLangFromUrl, getLocalePath } from '../../lib/utils';
import { SOCIAL_MEDIA, CONTACT } from '../../lib/constants';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="footer container">
  <div class="footer-menu">
    <div class="hidden-lg">
      <a href={getLocalePath(lang, '/')} class="footer-logo-link">
        <img src="/images/jaukuma-logo-rect.svg" alt="Jaukuma" width="261" />
      </a>
    </div>
    
    <div class="footer-services-submenu">
      <h3 class="submenu-title">{t('section.footer.services.title')}</h3>
      <ul class="submenu-list">
        <li><span>{t('section.footer.services.bouquets')}</span></li>
        <li><span>{t('section.footer.services.decoration')}</span></li>
        <li><span>{t('section.footer.services.plants')}</span></li>
        <li><span>{t('section.footer.services.events')}</span></li>
        <li><span>{t('section.footer.services.subscription')}</span></li>
      </ul>
    </div>
    
    <div class="footer-info-submenu">
      <div class="contacts">
        <h3 class="submenu-title">{t('section.footer.contact.title')}</h3>
                 <ul class="submenu-list">
           <li><a href={`tel:${CONTACT.PHONE}`}>{t('section.footer.contact.phone')}</a></li>
           <li><a href="https://maps.app.goo.gl/zSE68o8uiVocDfRA7" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address1')}</a></li>
           <li><a href="https://maps.app.goo.gl/uRcTPd2rH8BM4sMR6" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address2')}</a></li>
           <li><a href="https://maps.app.goo.gl/fVB1y5DGnxBmvDbH9" target="_blank" rel="noopener noreferrer">{t('section.footer.contact.address3')}</a></li>
         </ul>
      </div>
   <!-- temporary disabled
      <div class="company-info">
        <h3 class="submenu-title">{t('section.footer.company.title')}</h3>
        <ul class="submenu-list">
          <li><a href={getLocalePath(lang, '/#about')}>{t('section.footer.company.about')}</a></li>
          <li><a href="/privacy">{t('section.footer.company.privacy')}</a></li>
        </ul>
      </div>
    </div> -->   
  </div>

  
  <!-- Copyright and Social Icons (Always Visible) -->
  <div class="copyright">
    <div class="social-icons">
      <a href={SOCIAL_MEDIA.INSTAGRAM} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <img src="/images/instagram-icon.svg" alt="Instagram" width="32" height="32" />
      </a>
      <a href={SOCIAL_MEDIA.FACEBOOK} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
        <img src="/images/facebook-icon.svg" alt="Facebook" width="32" height="32" />
      </a>
    </div>
    
    <div class="footer-info">
      <p class="copyright-text">{t('section.footer.copyright')}</p>
    </div>
  </div>
</footer>

<style>
  /* Common Footer Styles */
  .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background-color: var(--color-main-primary-light);
    color: var(--color-light);
    width: 100%;
    padding: 2.5rem 9rem;
  }


  /* Footer Menu Styles */
  .footer-menu {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    padding: 0 0 1rem 0;
    flex-wrap: wrap;
  }

  /* Footer Logo Link */
  .footer-logo-link {
    display: inline-block;
    transition: opacity 0.3s ease;
    text-decoration: none;
  }

  .footer-logo-link:hover {
    opacity: 0.9;
  }

  /* Services Submenu */
  .footer-services-submenu {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    padding: 0 1rem 1rem;
  }

  /* Info Submenu */
  .footer-info-submenu {
    display: flex;
    gap: 1rem;
  }

  .contacts,
  .company-info {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    padding: 0 1rem;
  }

  /* Typography */
  .submenu-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    line-height: 1.33;
    margin: 0;
    color: var(--color-light);
  }

  .copyright{
    padding-top: 1rem;
  }

  @media (min-width: 1536px) {
    .footer {
      border-radius: 0 0 0.5rem 0.5rem;
      overflow: hidden;
    }
  }

  @media (min-width: 1024px) {
    .submenu-title {
      font-size: 1.125rem;
    }
    .submenu-list li {
      font-size: 0.875rem;
    }
    .copyright-text {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 1023px) {
    .submenu-title {
      font-size: 1.25rem;
    }
    .submenu-list li {
      font-size: 1rem;
    }
    .copyright-text {
      font-size: 1rem;
    }
    .footer {
      padding: 2.5rem 3rem;
    }
    
    /* Adjust layout for tablets */
    .footer-menu {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
    
    .footer-services-submenu,
    .footer-info-submenu {
      align-items: center;
      text-align: center;
    }
    
    .contacts,
    .company-info {
      padding: 0;
    }
  }

  @media (max-width: 768px) {
    /* Remove the rule that was hiding the footer menu */
    .footer {
      padding: 2rem 1.5rem;
    }
    
    .footer-menu {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
    
    /* Hide services submenu on mobile */
    .footer-services-submenu {
      display: none;
    }
    
    .footer-info-submenu {
      align-items: center;
      text-align: center;
    }
    
    .contacts,
    .company-info {
      padding: 0;
    }
    
    .submenu-title {
      font-size: 1.125rem;
    }
    
    .submenu-list li {
      font-size: 0.875rem;
    }
  }

  .submenu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .submenu-list li {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    line-height: 1.26;
    color: var(--color-light);
  }

  .submenu-list a {
    color: var(--color-light);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .submenu-list a:hover {
    opacity: 0.8;
  }

  .submenu-list span {
    color: var(--color-light);
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    line-height: 1.26;
  }

  /* Copyright and Social Icons (Always Visible) */
  .copyright {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 0.625rem;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 1rem;
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .social-icons a:hover {
    opacity: 0.8;
  }

  .footer-info {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 0.5rem;
  }

  .copyright-text {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    line-height: 1.26;
    letter-spacing: 0.01em;
    text-align: center;
    margin: 0;
    color: var(--color-light);
  }
</style>