---
import { useTranslations, getLangFromUrl } from '../../lib/utils';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="about-section">
  <!-- Decorative spacer with SVG elements -->
  <div class="spacer">
    <svg width="243" height="246" viewBox="0 0 243 246" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M75.99 157.05L144.31 214.83" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M37.71 47.98L96.86 112.15" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M78.93 85.04L149.14 157.94" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M82.32 20.57L137.83 79.03" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M45.47 150.1L90.52 198.45" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M130.55 167.58L182.51 211.32" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M25.39 101.24L76.25 144.57" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M110.6 48.21L186.92 128.12" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M68.83 20.79L107.21 61.5" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M129.07 90.72L200.38 161.88" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M110.31 29.24L165.06 96.49" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M62.3 59.31L121.04 129.52" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M81.32 127.95L151.35 185.83" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M148.92 121.08L208.01 170.91" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M139.45 146.42L189.26 187.31" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
      <path d="M142.66 50.39L177.08 90.13" stroke="rgba(52, 62, 71, 0.1)" stroke-width="1.5"/>
    </svg>
  </div>

  <!-- Main content container -->
  <div class="about-content">
    <!-- About us information -->
    <div class="about-info">
      <h2 class="about-title" set:html={t('section.about.title')}></h2>
      <div class="about-text">
        <p set:html={t('section.about.mission')}></p>
        <p set:html={t('section.about.philosophy')}></p>
        <p set:html={t('section.about.promise')}></p>
      </div>
      <a href="/about" class="button-secondary">{t('section.about.button')}</a>
    </div>

    <!-- Image gallery slider -->
    <div class="gallery-slider">
      <!-- Navigation arrows -->
      <div class="navigation">
        <button class="nav-arrow nav-prev" aria-label="Previous">
          <svg width="29" height="29" viewBox="0 0 29 29" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="14.2857" cy="14.2857" r="14.2857" fill="#6B7866"/>
            <path d="M14.2857 9.52381L9.52381 14.2857L14.2857 19.0476" stroke="white" stroke-width="1.19"/>
            <path d="M9.52381 14.2857H19.0476" stroke="white" stroke-width="1.19"/>
          </svg>
        </button>
        <button class="nav-arrow nav-next" aria-label="Next">
          <svg width="29" height="29" viewBox="0 0 29 29" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="14.2857" cy="14.2857" r="14.2857" fill="none" stroke="#6B7866" stroke-width="1.5"/>
            <path d="M9.52381 9.52381L14.2857 14.2857L9.52381 19.0476" stroke="#6B7866" stroke-width="1.19"/>
            <path d="M19.0476 14.2857H9.52381" stroke="#6B7866" stroke-width="1.19"/>
          </svg>
        </button>
      </div>

      <!-- Gallery images -->
      <div class="gallery">
        <div class="gallery-item">
          <div class="image-container">
            <img src="/images/placeholder-1.svg" alt="Flower arrangement 1" class="gallery-image" />
          </div>
          <h3 class="image-title">Lorem Ipsum</h3>
          <p class="image-description">All the Lorem Ipsum generators on the Internet</p>
        </div>
        <div class="gallery-item">
          <div class="image-container">
            <img src="/images/placeholder-2.svg" alt="Flower arrangement 2" class="gallery-image" />
          </div>
          <h3 class="image-title">Lorem Ipsum</h3>
          <p class="image-description">All the Lorem Ipsum generators on the Internet</p>
        </div>
        <div class="gallery-item">
          <div class="image-container">
            <img src="/images/placeholder-3.svg" alt="Flower arrangement 3" class="gallery-image" />
          </div>
          <h3 class="image-title">Lorem Ipsum</h3>
          <p class="image-description">All the Lorem Ipsum generators on the Internet</p>
        </div>
        <div class="gallery-item mobile-only">
          <div class="image-container">
            <img src="/images/placeholder-4.svg" alt="Flower arrangement 4" class="gallery-image" />
          </div>
          <h3 class="image-title">Lorem Ipsum</h3>
          <p class="image-description">All the Lorem Ipsum generators on the Internet</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    background: #FFFFFF;
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
  }

  .spacer {
    position: absolute;
    top: 5rem;
    left: 0;
    width: 9rem;
    height: 16.35rem;
    z-index: 1;
  }

  .spacer svg {
    position: absolute;
    top: -4.31rem;
    left: -3.125rem;
  }

  .about-content {
    display: flex;
    gap: 6rem;
    max-width: 1536px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .about-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 4rem 2rem 0;
    flex: 1;
  }

  .about-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: 6rem;
    line-height: 1;
    color: #323E48;
    margin: 0;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-text p {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.257;
    color: #323E48;
    margin: 0;
  }

  .button-secondary {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    padding: 0.9375rem 3.75rem;
    height: 3.375rem;
    background: #333F48;
    color: #FFFFFF;
    text-decoration: none;
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.333;
    text-transform: uppercase;
    border-radius: 0;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .button-secondary:hover {
    background: #2a3339;
  }

  .gallery-slider {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    flex: 1;
  }

  .navigation {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    align-self: stretch;
    gap: 0.5rem;
    padding: 0 2rem 0 0;
  }

  .nav-arrow {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 1.786rem;
    height: 1.786rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .nav-arrow:hover {
    opacity: 0.8;
  }

  .gallery {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    align-items: center;
    align-self: stretch;
  }

  .gallery-item {
    display: flex;
    flex-direction: column;
    gap: 0.3125rem;
    width: 18rem;
  }

  .image-container {
    width: 100%;
    height: 25.94rem;
    border-radius: 10rem 10rem 0 0;
    overflow: hidden;
    background: #D9D9D9;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 9.375rem 9.375rem 0 0;
  }

  .image-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.333;
    color: #323E48;
    margin: 0;
  }

  .image-description {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.257;
    color: #323E48;
    margin: 0;
  }

  .mobile-only {
    display: none;
  }

  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {
    .about-section {
      padding: 5rem 0;
    }

    .spacer {
      position: absolute;
      top: 5rem;
      right: 0;
      left: auto;
    }

    .about-content {
      flex-direction: column;
      gap: 1.5rem;
      padding: 0 9rem;
    }

    .about-info {
      padding: 4rem 0 0;
      align-items: center;
      text-align: center;
    }

    .about-title {
      font-size: 4rem;
    }

    .about-text p {
      font-size: 1rem;
    }

    .button-secondary {
      align-self: center;
    }

    .navigation {
      padding: 0 0.75rem 0 0;
    }

    .gallery {
      gap: 1.25rem;
    }

    .gallery-item {
      width: 18rem;
    }

    .mobile-only {
      display: flex;
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .about-section {
      padding: 5rem 0;
    }

    .spacer {
      display: none;
    }

    .about-content {
      flex-direction: column;
      gap: 3rem;
      padding: 0 1.5rem;
    }

    .about-info {
      padding: 0;
      align-items: center;
      text-align: center;
    }

    .about-title {
      font-size: 2.5rem;
    }

    .about-text p {
      font-size: 1rem;
    }

    .button-secondary {
      align-self: center;
    }

    .gallery {
      gap: 0.5rem;
    }

    .gallery-item {
      width: 10rem;
    }

    .image-container {
      height: 14rem;
      border-radius: 5rem 5rem 0 0;
    }

    .gallery-image {
      border-radius: 5rem 5rem 0 0;
    }

    .image-title {
      font-size: 0.875rem;
      color: rgba(50, 62, 72, 0.8);
    }

    .image-description {
      font-size: 0.875rem;
      color: rgba(50, 62, 72, 0.8);
    }

    .mobile-only {
      display: flex;
    }
  }
</style>
