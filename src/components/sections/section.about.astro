---
import { useTranslations, getLangFromUrl } from '../../lib/utils';
import GalleryControl from '../controls/control.gallery.astro';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Gallery data
const galleryItems = [
  {
    imageRef: "/images/placeholder-1.svg",
    imageTitle: "Lorem Ipsum",
    imageDescription: "All the Lorem Ipsum generators on the Internet"
  },
  {
    imageRef: "/images/placeholder-2.svg",
    imageTitle: "Lorem Ipsum",
    imageDescription: "All the Lorem Ipsum generators on the Internet"
  },
  {
    imageRef: "/images/placeholder-3.svg",
    imageTitle: "Lorem Ipsum",
    imageDescription: "All the Lorem Ipsum generators on the Internet"
  },
  {
    imageRef: "/images/placeholder-4.svg",
    imageTitle: "Lorem Ipsum",
    imageDescription: "All the Lorem Ipsum generators on the Internet"
  }
];
---

<section class="about-section">
  <!-- Decorative spacer with SVG elements -->
  <div class="spacer">
    <img src="/images/decorative-spacer.svg" alt="Decorative spacer" width="194" height="246" />
  </div>

  <!-- Main content container -->
  <div class="about-content">
    <!-- About us information -->
    <div class="about-info">
      <h2 class="about-title" set:html={t('section.about.title')}></h2>
      <div class="about-text">
        <p set:html={t('section.about.mission')}></p>
        <p set:html={t('section.about.philosophy')}></p>
        <p set:html={t('section.about.promise')}></p>
      </div>
      <a href="/about" class="button-secondary">{t('section.about.button')}</a>
    </div>

    <!-- Image gallery slider -->
    <GalleryControl items={galleryItems} />
  </div>
</section>

<style>
  .about-section {
    background: #FFFFFF;
    padding: 5rem 0;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .spacer {
    position: absolute;
    top: 0;
    width: 12rem;
    z-index: 1;
  }

  .spacer img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .about-content {
    display: flex;
    gap: 6rem;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }

  .about-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 4rem 0 0 8rem;
    flex: 1;
    max-width: 34rem;
    min-width: 34rem;
  }

  .about-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: 6rem;
    line-height: 1;
    color: #323E48;
    margin: 0;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-text p {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    font-size: 0.875rem;
    line-height: 1.257;
    color: #323E48;
    margin: 0;
  }

  .button-secondary {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    padding: 0.9375rem 3.75rem;
    height: 3.375rem;
    background: #333F48;
    color: #FFFFFF;
    text-decoration: none;
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.333;
    text-transform: uppercase;
    border-radius: 0;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .button-secondary:hover {
    background: #2a3339;
  }



  /* Tablet Layout */
  @media (min-width: 768px) and (max-width: 1023px) {

    .about-content {
      flex-direction: column;
      gap: 3rem;
    }

    .about-info {
      max-width: 100%;
      padding: 0 8rem 0 8rem;
    }
  }

  /* Mobile Layout */
  @media (max-width: 767px) {
    .about-section {
      padding: 2rem 0;
    }

    .spacer {
      display: none;
    }

    .about-content {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
      padding: 0 0rem;
    }

    .about-info {
      max-width: 100%;
      min-width: 100%;
      padding: 0 2rem 0 2rem;
    }

    .about-title {
      font-size: 2.5rem;
    }

    .about-text p {
      font-size: 1rem;
    }

    .button-secondary {
      align-self: center;
      width: 100%;
    }
  }
</style>
