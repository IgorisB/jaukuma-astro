---
import '../styles/global.css';
import { getLangFromUrl } from '../lib/utils';
import Footer from '../components/sections/section.footer.astro';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="locale" content={lang} />
		<meta name="pathname" content={Astro.url.pathname} />
		<meta name="url" content={Astro.url.toString()} />
		<title>{Astro.props.title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Source+Sans+Pro:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		<Footer locale={lang} />
	</body>
</html> 