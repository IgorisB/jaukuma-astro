---
import '../styles/global.css';
import { getLangFromUrl } from '../lib/utils';
import Seo from '../components/Seo.astro';
import Footer from '../components/sections/section.footer.astro';
const lang = Astro.props.locale || getLangFromUrl(Astro.url);
const title = Astro.props.title || 'Jaukuma';
const description = Astro.props.description || 'Professional floristry for events, offices and homes';
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<Seo 
			title={title} 
			description={description} 
			pathname={pathname} 
			locale={lang} 
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Source+Sans+Pro:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot/>
		<Footer locale={lang} />
	</body>
</html>