---
import Layout from '../../layouts/Layout.astro';
import PageAboutBody from '../../components/pages/page.about.astro';
import { useTranslationsFromUrl, getStaticPaths, getLangFromUrl } from '../../lib/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslationsFromUrl(Astro.url);
export { getStaticPaths };
const title = t('page.about.title');
const description = t('page.about.description');
---

<Layout title={title} description={description} locale={lang}>
  <PageAboutBody locale={lang} />
</Layout>