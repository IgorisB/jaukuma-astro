---
import Layout from '../layouts/Layout.astro';
import Page404Body from '../components/pages/page.404.astro';
import { useTranslationsFromUrl, getLangFromUrl } from '../lib/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslationsFromUrl(Astro.url);
const title = "404 - Page Not Found";
const description = t('page.404.description');
---

<Layout title={title} description={description} locale={lang}>
  <Page404Body locale={lang} />
</Layout>