---
import Layout from '../layouts/Layout.astro';
import ControlNavbarDesktop from '../components/controls/control.navbar.desktop.astro';
import { getLangFromUrl, useTranslations } from '../lib/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="404 - Page Not Found" locale={lang}>
  <div class="error-page">
    <!-- 404 Content -->
    <div class="error-content">
      <div class="error-number">404</div>
      <h1 class="error-title">{t('page.404.title')}</h1>
      <p class="error-description">
        {t('page.404.description')}
      </p>
      <div class="error-actions">
        <a href="/" class="error-button primary">
          {t('page.404.button.home')}
        </a>
        <a href="/about" class="error-button secondary">
          {t('page.404.button.about')}
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .error-page {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(rgba(50, 62, 72, 0.6), rgba(50, 62, 72, 0.6)), 
                url('/images/hero-background.jpg') no-repeat center center;
    background-size: cover;
    color: white;
    min-height: 100vh;
    padding: 36px 144px 144px 144px;
    gap: 144px;
  }

  .error-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 0 auto;
    gap: 40px;
    text-align: center;
    flex: 1;
  }

  .error-number {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 120px;
    line-height: 1;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  .error-title {
    font-family: 'Playfair Display', serif;
    font-weight: 400;
    font-size: 48px;
    line-height: 1.2;
    text-align: center;
    margin: 0;
  }

  .error-description {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.5;
    text-align: center;
    margin: 0;
    max-width: 500px;
    opacity: 0.9;
  }

  .error-actions {
    display: flex;
    gap: 20px;
    margin-top: 20px;
  }

  .error-button {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 1.33;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 40px;
    border: 2px solid white;
    transition: all 0.3s ease;
    min-width: 140px;
    text-align: center;
  }

  .error-button.primary {
    background: white;
    color: var(--color-main-primary);
  }

  .error-button.primary:hover {
    background: var(--color-main-secondary);
    transform: translateY(-2px);
  }

  .error-button.secondary {
    background: transparent;
    color: white;
  }

  .error-button.secondary:hover {
    background: white;
    color: var(--color-main-primary);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-page {
      padding: 20px 20px 80px 20px;
      gap: 80px;
    }

    .error-number {
      font-size: 80px;
    }

    .error-title {
      font-size: 32px;
    }

    .error-description {
      font-size: 16px;
    }

    .error-actions {
      flex-direction: column;
      gap: 15px;
    }

    .error-button {
      width: 100%;
      max-width: 250px;
    }
  }
</style> 